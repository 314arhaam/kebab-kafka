[Unit]
Description=Kafka
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
User=root
Group=root
SyslogIdentifier=kafka
Restart=on-failure
Environment=JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
ExecStart={{ KAFKA_INSTALL_DIR }}/{{ KAFKA_FILE }}/bin/kafka-server-start.sh {{ KAFKA_INSTALL_DIR }}/{{ KAFKA_FILE }}/config/kraft/server.properties
ExecStop={{ KAFKA_INSTALL_DIR }}/{{ KAFKA_FILE }}/bin/kafka-server-stop.sh

[Install]
WantedBy=multi-user.target
